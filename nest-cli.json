{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"language": "ts",
	"sourceRoot": "src",
	"compilerOptions": {
		"assets": [
			"mail/templates/**/*"
		],
		"watchAssets": true,
		"deleteOutDir": true,
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"introspectComments": true
				}
			}
		]
	}
}
